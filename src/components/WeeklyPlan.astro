---
import GroceryList from './GroceryList.astro';
import MealCard from './MealCard.astro';
import Footer from './Footer.astro';
import StickyHeader from './StickyHeader.astro';
import type { WeekPlan } from '../utils/weekParser';

interface Props {
  weekPlan: WeekPlan;
}

const { weekPlan } = Astro.props;

// Derive short title: "Week of December 7-13, 2025" â†’ "Dec 7-13"
// Also handle "Weekend of ..." format
const shortTitle = weekPlan.weekTitle
  .replace(/Week of /, '')
  .replace(/Weekend of /, '')
  .replace(/(\w+)\s+(\d+-\d+),\s+\d+/, (_, month, days) => 
    `${month.slice(0, 3)} ${days}`
  );

// Prepare meals for header navigation
const mealsForNav = weekPlan.meals.map(meal => ({
  id: meal.id,
  title: meal.title,
  cooked: meal.cooked
}));

// Build favicon path
const baseUrl = import.meta.env.BASE_URL.endsWith('/') 
  ? import.meta.env.BASE_URL 
  : import.meta.env.BASE_URL + '/';
const faviconSrc = baseUrl + 'favicon.svg';
---

<StickyHeader 
  shortTitle={shortTitle}
  meals={mealsForNav}
  hasGroceryList={weekPlan.groceryList.length > 0}
/>

<div class="weekly-plan container">
  <!-- Hero Section -->
  <section class="hero-section" id="top">
    <h1 class="hero-title">{weekPlan.weekTitle}</h1>
    <div class="hero-icon">
      <img src={faviconSrc} alt="Food of the Week" class="hero-favicon" />
    </div>
  </section>
  
  {weekPlan.groceryList.length > 0 && (
    <GroceryList 
      categories={weekPlan.groceryList}
    />
  )}
  
  <div class="meals-container">
    {weekPlan.meals.map((section) => (
      <MealCard section={section} />
    ))}
  </div>
  
  {weekPlan.meals.length === 0 && weekPlan.groceryList.length === 0 && (
    <div class="empty-state section">
      <h2>No meal plan available</h2>
      <p>Check back later for this week's meal plan, or add content to FOOD-OF-THE-WEEK.md to get started.</p>
    </div>
  )}

  <Footer />
</div>

<style>
  .weekly-plan {
    padding: var(--spacing-lg) var(--spacing-md);
    padding-top: 0;
  }

  .hero-section {
    text-align: center;
    padding: var(--spacing-xl) var(--spacing-md);
    min-height: 40vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-lg);
  }

  .hero-title {
    margin-bottom: 0;
  }

  .hero-icon {
    display: flex;
    justify-content: center;
  }

  .hero-favicon {
    width: 80px;
    height: 80px;
    opacity: 0.6;
  }

  .meals-container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }

  .empty-state {
    text-align: center;
    padding: var(--spacing-xl);
    background: var(--color-bg-alt);
  }

  .empty-state h2 {
    margin-top: 0;
    color: var(--color-text-light);
  }

  .empty-state p {
    color: var(--color-text-light);
    margin-bottom: 0;
  }
  
  @media screen(mobile) {
    .weekly-plan {
    padding: var(--spacing-md) var(--spacing-sm);
      padding-top: 0;
    }
    
    .hero-section {
      min-height: 30vh;
      padding: var(--spacing-lg) var(--spacing-sm);
    }
    
    .meals-container {
      gap: var(--spacing-lg);
  }
  }
</style>

