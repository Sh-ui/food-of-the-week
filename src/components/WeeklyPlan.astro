---
import GroceryList from './GroceryList.astro';
import MealCard from './MealCard.astro';
import PrintButton from './PrintButton.astro';
import Footer from './Footer.astro';
import StickyHeader from './StickyHeader.astro';
import type { WeekPlan } from '../utils/weekParser';

interface Props {
  weekPlan: WeekPlan;
}

const { weekPlan } = Astro.props;

// Derive short title: "Week of December 7-13, 2025" â†’ "Dec 7-13"
// Also handle "Weekend of ..." format
const shortTitle = weekPlan.weekTitle
  .replace(/Week of /, '')
  .replace(/Weekend of /, '')
  .replace(/(\w+)\s+(\d+-\d+),\s+\d+/, (_, month, days) => 
    `${month.slice(0, 3)} ${days}`
  );

// Prepare content sections for header navigation
const sectionsForNav = weekPlan.meals.map(section => ({
  id: section.id,
  title: section.title,
  cooked: section.cooked
}));
---

<StickyHeader 
  weekTitle={weekPlan.weekTitle}
  shortTitle={shortTitle}
  meals={sectionsForNav}
  hasGroceryList={weekPlan.groceryList.length > 0}
/>

<div class="weekly-plan container">
  <!-- Hero Section -->
  <section class="hero-section" id="top">
    <h1 class="hero-title">{weekPlan.weekTitle}</h1>
    <div class="hero-actions">
      <PrintButton target="all" label="Print Full Week" variant="primary" />
    </div>
  </section>
  
  {weekPlan.groceryList.length > 0 && (
    <GroceryList 
      categories={weekPlan.groceryList} 
      weekTitle={weekPlan.weekTitle}
    />
  )}
  
  <div class="meals-container">
    {weekPlan.meals.map((section) => (
      <MealCard section={section} />
    ))}
  </div>
  
  {weekPlan.meals.length === 0 && weekPlan.groceryList.length === 0 && (
    <div class="empty-state section">
      <h2>No meal plan available</h2>
      <p>Check back later for this week's meal plan, or add content to FOOD-OF-THE-WEEK.md to get started.</p>
    </div>
  )}

  <Footer />
</div>

<style>
  .weekly-plan {
    padding: var(--spacing-lg) var(--spacing-md);
    padding-top: 0;
  }

  .hero-section {
    text-align: center;
    padding: var(--spacing-xl) var(--spacing-md);
    min-height: 40vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-lg);
  }

  .hero-title {
    margin-bottom: 0;
  }

  .hero-actions {
    display: flex;
    justify-content: center;
  }

  .hero-actions .button {
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: 1.1rem;
  }

  .meals-container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }

  .empty-state {
    text-align: center;
    padding: var(--spacing-xl);
    background: var(--color-bg-alt);
  }

  .empty-state h2 {
    margin-top: 0;
    color: var(--color-text-light);
  }

  .empty-state p {
    color: var(--color-text-light);
    margin-bottom: 0;
  }
  
  @media (max-width: 768px) {
    .weekly-plan {
    padding: var(--spacing-md) var(--spacing-sm);
      padding-top: 0;
    }
    
    .hero-section {
      min-height: 30vh;
      padding: var(--spacing-lg) var(--spacing-sm);
    }
    
    .meals-container {
      gap: var(--spacing-lg);
  }
  }
</style>

