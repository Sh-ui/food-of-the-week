---
// Footer component with links to GitHub repository
const repoBase = 'https://github.com/sh-ui/food-of-the-week';
---

<footer class="site-footer" id="site-footer">
  <nav class="footer-links">
    <a href={repoBase} target="_blank" rel="noopener noreferrer">
      Repository
    </a>
    <span class="divider">|</span>
    <a href={`${repoBase}/blob/master/README.md`} target="_blank" rel="noopener noreferrer">
      README
    </a>
    <span class="divider">|</span>
    <a href={`${repoBase}/tree/master/archive`} target="_blank" rel="noopener noreferrer">
      Archive
    </a>
    <span class="divider">|</span>
    <a href={`${repoBase}/blob/master/FOOD-OF-THE-WEEK.md`} target="_blank" rel="noopener noreferrer">
      This Week's Plan
    </a>
    <span class="divider">|</span>
    <a href="/weekend">
      Weekend
    </a>
  </nav>
</footer>

<style>
  .site-footer {
    margin-top: var(--spacing-xl);
    padding: var(--spacing-lg) var(--spacing-md);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .footer-links a {
    color: var(--color-text-light);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .divider {
    color: var(--color-border);
    user-select: none;
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    .footer-links {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .divider {
      display: none;
    }

    .footer-links a {
      font-size: 1.1rem;
      padding: var(--spacing-xs) 0;
    }
  }
</style>
