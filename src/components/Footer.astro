---
// Footer component with links to GitHub repository
const repoBase = 'https://github.com/sh-ui/food-of-the-week';
const base = import.meta.env.BASE_URL;
---

<footer class="mt-xl py-lg px-md border-t border-border text-center" id="site-footer">
  <nav class="flex justify-center items-center gap-sm flex-wrap mobile:flex-col mobile:gap-md">
    <a href={repoBase} target="_blank" rel="noopener noreferrer" class="text-text-light no-underline text-[0.95rem] transition-colors hover:text-primary hover:underline mobile:text-[1.1rem] mobile:py-xs">
      Repository
    </a>
    <span class="text-border select-none mobile:hidden">|</span>
    <a href={`${repoBase}/blob/master/README.md`} target="_blank" rel="noopener noreferrer" class="text-text-light no-underline text-[0.95rem] transition-colors hover:text-primary hover:underline mobile:text-[1.1rem] mobile:py-xs">
      README
    </a>
    <span class="text-border select-none mobile:hidden">|</span>
    <a href={`${repoBase}/tree/master/archive`} target="_blank" rel="noopener noreferrer" class="text-text-light no-underline text-[0.95rem] transition-colors hover:text-primary hover:underline mobile:text-[1.1rem] mobile:py-xs">
      Archive
    </a>
    <span class="text-border select-none mobile:hidden">|</span>
    <a href={`${repoBase}/blob/master/FOOD-OF-THE-WEEK.md`} target="_blank" rel="noopener noreferrer" class="text-text-light no-underline text-[0.95rem] transition-colors hover:text-primary hover:underline mobile:text-[1.1rem] mobile:py-xs">
      This Week's Plan
    </a>
    <span class="text-border select-none mobile:hidden">|</span>
    <a href={`${base}weekend`} class="text-text-light no-underline text-[0.95rem] transition-colors hover:text-primary hover:underline mobile:text-[1.1rem] mobile:py-xs">
      Weekend
    </a>
  </nav>
</footer>

