---
interface Props {
  title: string;
}

const { title } = Astro.props;
import '../styles/global.css';
import '../styles/print.css';

const faviconHref = import.meta.env.BASE_URL === '/' ? '/favicon.svg' : import.meta.env.BASE_URL + 'favicon.svg';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5" />
    <meta name="description" content="Weekly meal planning for the family" />
    <link rel="icon" type="image/svg+xml" href={faviconHref} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
